@{
    ViewBag.Name = "Account";
}
@section styles {
    <link href="~/Styles/user-forms.css" rel="stylesheet">
}
@section scripts {
    <script src="~/Bindings/Models/ChangePasswordModel.js" type="text/javascript"></script>
    <script src="~/Bindings/ViewModels/ChangePasswordViewModel.js" type="text/javascript"></script>
}
@section ko_apply {
    let viewModel = new Events.ChangePasswordViewModel();
    ko.applyBindingsWithValidation(viewModel, $("#chpassword")[0], { insertMessages: false, messagesOnModified: false, grouping: { deep: true }});
}

<div id="chpassword">
    <section class="form-simple draggable">
        <div class="card">
            <div class="header pt-3 grey lighten-2">
                <div class="row d-flex justify-content-start">
                    <h3 class="deep-grey-text mt-3 mb-4 pb-1 mx-5">Change password</h3>
                </div>
            </div>
            <div class="card-body mx-4 mt-4">
                <div data-bind="with: model">

                    <div class="md-form">
                        <i class="fa fa-lock prefix grey-text"></i>

                        <input data-bind="value: OldPassword" type="text" class="form-control" placeholder="Old password">
                    </div>

                    <div class="md-form">
                        <i class="fa fa-lock prefix grey-text"></i>

                        <input data-bind="value: NewPassword" type="password" class="form-control" placeholder="New password">
                    </div>

                    <div data-bind="value: ConfirmPassword" class="md-form pb-3">
                        <i class="fa fa-shield prefix grey-text"></i>
                        <input data-bind="value: ConfirmPassword" type="password" class="form-control" placeholder="Confirm password">
                    </div>

                    <div data-bind="loadingWhen: $parent.viewModelHelper.isLoading" class="text-center mb-4 pb-1">
                        <button data-bind="click:$parent.changePassword" type="button" class="btn btn-warning btn-block z-depth-2">Change password</button>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
