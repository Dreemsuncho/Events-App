<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    <link href="~/node_modules/font-awesome/css/font-awesome.min.css" rel="stylesheet" />

    <link href="~/node_modules/mdbootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/node_modules/mdbootstrap/css/style.css" rel="stylesheet" />
    <link href="~/node_modules/mdbootstrap/css/mdb.min.css" rel="stylesheet" />

    <link href="~/node_modules/toastr/build/toastr.min.css" rel="stylesheet" />

    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link href="~/Styles/datetimepicker.css" rel="stylesheet" />

    <link href="~/Styles/site.css" rel="stylesheet">

    @await RenderSectionAsync("styles", required: false)
</head>
<body>
    @await Html.PartialAsync("/Views/Shared/_TopBar.cshtml")
    @*@await Html.PartialAsync("/Views/Shared/_TopBar2.cshtml")*@
    <section class="wrapper">
        <br /><br /><br /><br /><br />
        <img src="~/Images/bespoke_events_logo.png" alt="Logo" width="200" class="draggable" />

        <div>
            <br />
            @RenderBody()
            <br />
        </div>
    </section>
    @await Html.PartialAsync("/Views/Shared/_BottomBar.cshtml")

    <script src="~/node_modules/moment/moment.js" type="text/javascript"></script>

    <script src="~/node_modules/jquery/dist/jquery.min.js" type="text/javascript"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>

    <script src="~/node_modules/knockout/build/output/knockout-latest.js"></script>
    <script src="~/node_modules/knockout.validation/dist/knockout.validation.min.js" type="text/javascript"></script>
    <script src="~/node_modules/knockout.validation/dist/knockout.validation.js" type="text/javascript"></script>

    <script src="~/node_modules/mdbootstrap/js/popper.min.js" type="text/javascript"></script>
    <script src="~/node_modules/mdbootstrap/js/bootstrap.min.js" type="text/javascript"></script>
    <script src="~/node_modules/mdbootstrap/js/mdb.min.js" type="text/javascript"></script>

    <script src="~/node_modules/toastr/build/toastr.min.js" type="text/javascript"></script>

    <script src="~/node_modules/bootstrap-material-datetimepicker/js/bootstrap-material-datetimepicker.js" type="text/javascript"></script>


    <script src="~/Scripts/App.js" type="text/javascript"></script>

    @await RenderSectionAsync("scripts", required: false)
    <script type="text/javascript">
        Events.rootPath = window.location.origin + '/';
        $(function () {
                @await RenderSectionAsync("ko_apply", required: false)
                Events.refreshDragabble();
            });
    </script>


</body>
</html>
