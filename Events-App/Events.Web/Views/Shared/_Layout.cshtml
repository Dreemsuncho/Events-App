<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

    <!--bower:css-->
    <link rel="stylesheet" href="/bower/font-awesome/css/font-awesome.min.css" />
    <link rel="stylesheet" href="/bower/MDBootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" href="/bower/MDBootstrap/css/mdb.min.css" />
    <link rel="stylesheet" href="/bower/toastr/toastr.css" />
    <!--endbower-->
    <!--inject:css-->
    <link rel="stylesheet" href="/Styles/datetimepicker.css">
    <link rel="stylesheet" href="/Styles/site.css">
    <!--endinject-->

    @await RenderSectionAsync("styles", required: false)
</head>
<body>
    @await Html.PartialAsync("/Views/Shared/_TopBar.cshtml")
    <section class="wrapper">
        <img src="~/Images/bespoke_events_logo.png" alt="Logo" width="200" class="draggable" />

        <div>
            <br />
            @RenderBody()
            <br />
        </div>
    </section>
    @await Html.PartialAsync("/Views/Shared/_BottomBar.cshtml")

    <!--bower:js-->
    <script src="/bower/jquery/dist/jquery.js"></script>
    <script src="/bower/jquery-ui/jquery-ui.js"></script>
    <script src="/bower/knockout/dist/knockout.js"></script>
    <script src="/bower/bootstrap/dist/js/bootstrap.js"></script>
    <script src="/bower/MDBootstrap/js/mdb.min.js"></script>
    <script src="/bower/MDBootstrap/js/popper.min.js"></script>
    <script src="/bower/MDBootstrap/js/bootstrap.min.js"></script>
    <script src="/bower/toastr/toastr.js"></script>
    <script src="/bower/momentjs/moment.js"></script>
    <script src="/bower/bootstrap-material-datetimepicker/js/bootstrap-material-datetimepicker.js"></script>
    <script src="/bower/knockout-validation/dist/knockout.validation.js"></script>
    <!--endbower-->
    <!--inject:js-->
    <script src="/Scripts/App.js"></script>
    <!--endinject-->

    @await RenderSectionAsync("scripts", required: false)
    <script type="text/javascript">
        Events.rootPath = window.location.origin + '/';
        $(function () {
                @await RenderSectionAsync("ko_apply", required: false)
                Events.refreshDragabble();
            });
    </script>
</body>
</html>
